;Escribir un programa que imprime “INGENIERIA E 
;INFORMATICA” en la impresora a través del
;HAND-SHAKE. La comunicación se establece por 
;consulta de estado (polling). Para ello, implementar
;la subrutina imprimir_caracter_hand que 
;funcione de forma análoga a imprimir_caracter pero 
;con el
;handshake en lugar del PIO

dato equ 40h
estado equ 41h

org 1000h
msj db "INGENIERIA E INFORMATICA"
fin db ?

org 3000h
estadoCons:in al,estado
and al,1
jnz estadoCons
ret

org 2000h
mov bx,offset msj
mov cl,offset fin-offset msj
loop:call estadoCons
mov al,[bx]
out dato,al
inc bx
dec cl
jnz loop
int 0
end